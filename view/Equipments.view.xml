<mvc:View controllerName="jianelli.mock01.controller.Equipments"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Page id="page" 
        title="{i18n>installationTitle}"
        class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer"
        showNavButton="true"
        navButtonPress=".onNavBackButtonPress">
        <content>
            <Panel id="Panel1" width="auto" headerText="{i18n>selectEquipment}" class="sapUiResponsiveMargin" expandable="false">
                <content>
                    <Table id="idEquipmentsTable"
                        inset="false"
                        items="{ 
                            path: 'equipments>/Equipments',
                            sorter: {
                                path: 'Order'
                            }
                        }">
                        <columns>
                            <Column id="_IDGenColumn1" width="10em">
                                <Text id="_IDGenText1" text="{i18n>equipmentCode}" />
                            </Column>
                            <Column id="_IDGenColumn2" width="12em" minScreenWidth="Tablet" demandPopin="true">
                                <Text id="_IDGenText2" text="{i18n>origSize}" />
                            </Column>
                            <Column id="_IDGenColumn4" width="6em" minScreenWidth="Tablet" demandPopin="true">
                                <Text id="_IDGenText3" text="{i18n>uom}" />
                            </Column>
                            <Column id="_IDGenColumn5" minScreenWidth="Tablet" demandPopin="true">
                                <Text id="_IDGenText4" text="{i18n>split}" />
                            </Column>
                            <Column id="_IDGenColumn7" minScreenWidth="Tablet" demandPopin="true">
                                <Text id="_IDGenText5" text="{i18n>estampa}" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem id="_IDGenColumnListItem1" type="Navigation" press=".onItemPress">
                                <cells>
                                    <ObjectIdentifier id="_IDGenObjectIdentifier1" title="{equipments>Equipment}"/>
                                    <Text id="_IDGenText6" text="{equipments>OrigSize}" />
                                    <Text id="_IDGenText7" text="{equipments>Uom}" />
                                    <Text id="_IDGenText8" text="{equipments>Split}" />
                                    <Text id="_IDGenText9" text="{equipments>Estampa}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </content>
	        </Panel> 
        </content>
        <footer>
		</footer>
    </Page>
</mvc:View>